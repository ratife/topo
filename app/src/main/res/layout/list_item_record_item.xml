<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/imageFilterViewReady2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/presence_online" />

            <TextView
                android:id="@+id/recordItemAngleView"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>

        <TextView
            android:id="@+id/recordItemDistanceView"
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/recordITemBtnItemExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/actionModeCutDrawable" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/recordITemBtnItemEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_edit" />

    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>